<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="1"
                android:onClick="onClickButton1"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="4"
                android:onClick="onClickButton4"
                />

            <Button
                android:id="@+id/button7"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="7"
                android:onClick="onClickButton7"
                />

            <Button
                android:id="@+id/buttonL"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="*"
                android:onClick="onClickButtonL"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="2"
                android:onClick="onClickButton2"
                />

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="5"
                android:onClick="onClickButton5"
                />

            <Button
                android:id="@+id/button8"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="8"
                android:onClick="onClickButton8"
                />

            <Button
                android:id="@+id/button0"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="0"
                android:onClick="onClickButton0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button3"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="3"
                android:onClick="onClickButton3"
                />

            <Button
                android:id="@+id/button6"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="6"
                android:onClick="onClickButton6"
                />

            <Button
                android:id="@+id/button9"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="9"
                android:onClick="onClickButton9"
                />

            <Button
                android:id="@+id/buttonR"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="#"
                android:onClick="onClickButtonR"
                />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>